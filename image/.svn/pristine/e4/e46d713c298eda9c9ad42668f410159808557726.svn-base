@charset "utf-8";
/* CSS Document */


body, button, input, select, textarea {font:12px/1.5 "Microsoft YaHei","YaHei",Helvetica ,Arial ,simsun, sans-serif,"宋体"; color:#4b4b4b;}
html { background:#fff;}
body ,div, dt ,dl, ul ,ol , li ,h1,h2,h3,h4,h5,h6 , pre, form, input ,botton ,textarea , p , th , td ,dl ,dt ,dd{ margin:0; padding:0;}
/*---table { border-collapse:collapse; border-spacing:0;} table td { vertical-align:top;} table th { vertical-align:top; font-weight:normal;}---*/
img , fieldset{ border:none;}
li { list-style:none;}
ul ,ol ,li { padding-left:0px; margin-left:0px;}
h1,h2,h3,h4,h5,h6 { font-size:100%;}
h1 { font-size:18px;}
h2 { font-size:16px;}
h3 { font-size:14px;}
h3 { font-size:14px; font-weight:normal;}
h4 { display:inline;}
input ,button, textarea ,select { font-size:inherit; font-size:inherit; font-weight:inherit;}
input ,button , textarea ,select {*font-size:100%;}
select ,input , button ,textarea{font:100% Tahoma, Helvetica, Arial, sans-serif;}
button { background:#666; color:#fff; border:none; padding:4px; cursor:pointer;}
/* button , input { border:none;} */
input[type='button'], input[type='submit'], input[type='reset']{ border:none; cursor:pointer;outline:none;}
input::-moz-focus-inner{border-color:transparent!important;}

table { font-size:inherit; font:100%;}
a { text-decoration:none; outline:none}
/*a:hover { text-decoration:underline;}*/
a:focus{outline:0;zoom:1;}


hr { height:1px; border:none;}
html{ overflow:scroll;}
button:hover {cursor: pointer;}
select {line-height: 18px; padding: 3px;}
input[type='text'], input[type='password'] { padding:4px; border:1px solid #cccccc; line-height: 18px; height: 18px; width: 200px; }
input[type='checkbox'], input[type='radio'] {vertical-align:middle; }