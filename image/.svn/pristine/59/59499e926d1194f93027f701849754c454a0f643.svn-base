<script>
	var b = 0;
	function nextStep(a){
		$("div[id^=initial_]").each(function(){
			$(this).css("border","1px solid #D2D2D2");//移除 ID为two的对象的class名为divClass的样式。
		})
		$("#initial_"+a+"").css("border","1px solid red");
		b = a;
	}
	
	
		$("#next").click(function(){
			if(b == 0){
				alert("请选择商品类别!");
				return;
			}
			window.location="${base}/file-upload.html?id="+b;
		})

	

</script>










