@charset "utf-8";
/* CSS Document */


/*----登陆----*/
.login-padding{ padding:10px 0 100px;}
.login-main{ width:1200px; background:#FFF; margin:auto;}
.login-main .login-content{ width:1100px; margin:auto; overflow:hidden; padding:40px 0; }
.login-main .login-content .login-banner{ float:left; margin-right:60px;}
.login-content .form-area{ float:left; width:320px; color:#999;}
.login-content .form-area .span-a{ font-size:20px; font-weight:bold; color:#4c4c4c;}
.login-content .form-area .spanb-b{ color:#999; line-height:27px;}
.login-content .form-area .area-item .span-error{ color:#d90b19; float:right;}
.login-content .form-area .area-item .input{ width:308px; background-color:#f7f7f7; height:40px; margin-top:5px;}
.login-content .form-area .area-item .input-error{ border-color:#d90b19; background-color:#fff2f3;}
.login-content .form-area .area-item .w150{ width:138px;}
.login-content .form-area .area-item .validate{ float:left; margin:6px 0px 0 20px; cursor:pointer; width:120px; height:50px;}
.login-content .form-area .area-item .validate img {width: 120px; height: 50px;}
.login-content .form-area .area-item .f5{ line-height:50px;}
.login-content .form-area a{text-decoration:underline;}
.login-content .form-area .forget{ margin:15px 0 12px; display:block;}
.login-content .form-area .area-third-det img{ margin-right:6px; cursor:pointer; margin-top:10px;}
.login-content .form-area .area-third-det img:last-child{ margin-right:0;}
.login-content .form-area .area-item input,select{ color:#bbb;}

/*----注册----*/
.login-main .register{ width:440px;}
.register .width{ width:440px;}
.register .login-way{margin-bottom:35px; overflow: hidden;}
.register .login-way ul li{width:134px; line-height:48px; text-align:center; height:48px; color:#666; font-size:18px;border-width:1px; border-style:solid; border-color:#e4e4e4; float: left; cursor: pointer;}
.register .login-way ul .cuA{color:#d90b19; border-color:#b1b1b1 #b1b1b1;}
.register .login-way .mail-login a,.register .login-way .phone-login a {text-decoration: none;}

.register .register .area-item .w400{ width:398px;}
.register .register .area-item .mr28{ margin-right:28px;}
.register .register .area-item .I_select{ width:130px; height:50px; margin-top:5px;}
.register .register .area-item .mr7{ margin-right:7px;}
.register .register .area-item .ml6{ margin-left:6px;}
.register .register .area-item .mt10{ margin-top:10px;}
.register .register .area-item .w200{ width:238px;}
.register .register .area-item .get_code{height:50px; width:140px; line-height:50px; background: #d90b19; float:left; text-align:center; color: #fff;}
.register .register .area-item .fail{background:#aaa; color:#fff;}
#validCodeId {width: 213px;}


.register .register .m{ margin-right:8px; margin-top:3px;}
.register .register .w410{ width:410px;}
.register .register .msg{ text-align:center; margin-top:10px;}

/*----申请售后----*/
.customer-p{width:410px; line-height:30px; font-size:15px; margin-bottom:15px;}
.register .register .area-item .ws400{ width:410px;}
.area-item > div textarea{ width:400px; height:120px; background-color:#f7f7f7; color:#bbb;}
.login-content .form-area .area-item .input-b{ width:250px; margin-right:10px;}
.area-item > div .span{ width:140px; height:50px; background-color:#ffe5e7; color:#d90b19; display:inline-block; text-align:center; line-height:52px; cursor:pointer; border:1px solid #d90b19;}